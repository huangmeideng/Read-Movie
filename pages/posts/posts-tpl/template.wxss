/*
* post css
*/
.post-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.post-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 202rpx;
  justify-content: space-between;
  margin-top: 2px;
  background-color: #fff;
}

.post-line {
  margin-top: 4px;
  width: 700rpx;
  height: 2rpx;
  background-color: #ACADB1;
}

.post-content {
  display: flex;
  flex-direction: column;
}

.content-title {
  margin-top: 15px;
  margin-left: 25rpx;
  right: 5rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 30rpx;
}

.content-desc {
  margin-left: 30rpx;
  font-size: 25rpx;
  color: #616164;
  margin-top: 20px;
}

.desc-date {
  margin-right: 15rpx;
}

.desc-source {
  padding: 2rpx 5rpx;
  color: #fff;
  font-size: 25rpx;
  background-color: #ADBDAC;
  border-radius: 5rpx;
}

.post-image {
  margin-top: 10px;
  margin-right: 10rpx;
}

.post-image image{
  width: 200rpx;
  height: 150rpx;
  border-radius: 2px;
}